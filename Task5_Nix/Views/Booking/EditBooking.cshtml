@model Task5_Nix.ViewModels.BookRoomVM

@{
    ViewData["Title"] = "EditBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditBooking</h1>

<hr />
<div class="row">
    <div class="col-m-12">
        <form asp-controller="Booking" asp-action="EditBooking" asp-antiforgery="true" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="BookingId" />
                <input type="hidden" asp-for="VisitorFk" />
                <input type="hidden" asp-for="RoomFK" />
            </div>

            <div class="row md-10 mb-4">
                <label class="col-sm-5 control-label">Номер комнаты:</label>
                <div class="col-sm-7">
                    <input asp-for="RoomNumber" class="form-control" />
                </div>
            </div>

            <div class="row md-10 mb-4">
                <label class="col-sm-5 control-label">Дата заезда:</label>
                <div class="col-sm-7">
                    <input asp-for="MoveIn" class="form-control" />
                </div>
                <span asp-validation-for="MoveIn" class="text-danger"></span>
            </div>

            <div class="row md-10 mb-4">
                <label class="col-sm-5 control-label">Дата выезда:</label>
                <div class="col-sm-7">
                    <input asp-for="MoveOut" class="form-control" />
                </div>
                <span asp-validation-for="MoveOut" class="text-danger"></span>
            </div>

            <div class="row md-10 mb-4">
                <label class="col-sm-5 control-label">Отметить пользователя :</label>
                <div class="col-sm-2">
                    <input asp-for="CheckedIn" class="form-control" />
                </div>
            </div>

            <input type="submit" value="Изменить" class="btn btn-primary" />

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
