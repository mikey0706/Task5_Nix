@model Task5_Nix.ViewModels.BookRoomVM

@{
    ViewData["Title"] = "EditBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактирование заказа</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        @Html.ValidationSummary()
        @using (Html.BeginForm("EditBooking", "Booking", FormMethod.Post, true))
        {
            <div class="form-group">
                @Html.HiddenFor(m => m.BookingId, Model.BookingId)
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.VisitorFk, Model.VisitorFk)
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.RoomFK, Model.RoomFK)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RoomNumber, "Номер комнаты: ", new { @class = "control-label" })
                @Html.EditorFor(m => m.RoomNumber, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RoomNumber, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MoveIn, "Дата заезда: ", new { @class = "control-label" })
                @Html.EditorFor(m => m.MoveIn, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MoveIn, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MoveOut, "Дата выезда: ", new { @class = "control-label" })
                @Html.EditorFor(m => m.MoveOut, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MoveOut, null, new { @class = "text-danger" })
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(m => m.CheckedIn, Model.CheckedIn)
                    @Html.DisplayNameFor(model => model.CheckedIn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Редактировать" class="btn btn-primary" />
            </div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
