@model Task5_Nix.ViewModels.RoomCreateModel

@{
    ViewData["Title"] = "CreateRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateRoom</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @Html.ValidationSummary()
        @using (Html.BeginForm("CreateRoom", "Room", FormMethod.Post, true))
        {
        <div class="form-group">
            @Html.LabelFor(m => m.RoomNumber, "Номер комнаты: ", new { @class = "control-label" })
            @Html.EditorFor(m => m.RoomNumber, $"{Model.RoomNumber}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RoomNumber, null, new { @class = "text-danger" })

        </div>
         <div class="form-group">
            @Html.LabelFor(m => m.CategoryID, "Выберите категорию: ", new { @class = "control-label" })
            @Html.DropDownListFor(m => m.CategoryID, Model.Categories)
            @Html.ValidationMessageFor(m => m.CategoryID, null, new { @class = "text-danger" })
         </div>
         <div class="form-group">
            <input type="submit" value="Создать комнату" class="btn btn-primary" />
         </div>
        }

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
