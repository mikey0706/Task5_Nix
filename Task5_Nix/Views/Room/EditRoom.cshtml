@model Task5_Nix.ViewModels.RoomCreateModel

@{
    ViewData["Title"] = "EditRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditRoom</h1>

<h4>RoomCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoom", method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               @Html.HiddenFor(m=>m.RoomId, Model.RoomId)
            </div>
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentCategory" class="control-label"></label>
                <input asp-for="CurrentCategory" class="form-control" />
                <span asp-validation-for="CurrentCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.CategoryID, Model.Categories)
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
